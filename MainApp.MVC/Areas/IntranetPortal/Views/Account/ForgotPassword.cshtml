@model MainApp.MVC.ViewModels.IntranetPortal.Account.IntranetUsersForgotPasswordViewModel;
@using MainApp.MVC.Helpers;
@using Microsoft.AspNetCore.Http.Extensions;
@{
    ViewData["Title"] = @DbResHtml.T("Forgot password", "Resources");
    Layout = "~/Areas/IntranetPortal/Views/Shared/_LayoutPage.cshtml";
}
<p class="login-box-msg">@DbResHtml.T("Forgot password form", "Resources")</p>
<form class="mb-3" method="post" asp-action="ForgotPassword" asp-controller="Account" asp-area="IntranetPortal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UsernameOrEmail" class="form-label text-muted">@DbResHtml.T("Username or email", "Resources")</label>
        <input asp-for="UsernameOrEmail" type="text" class="form-control" required>
        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="@DbResHtml.T("Submit", "Resources")" class="mb-1 btn bg-gradient-success border-0" />
    </div>
</form>