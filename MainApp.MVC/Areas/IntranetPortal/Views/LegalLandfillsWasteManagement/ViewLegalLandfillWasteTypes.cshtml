@section BodyArea {
    <div class="modal" id="deleteLegalLandfillWasteTypeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-gradient-danger">
                    <h5 class="modal-title">@DbResHtml.T("Are you sure you want to delete this legal landfill Waste Type?", "Resources")</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="deleteLegalLandfillWasteTypeModalBody" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="mb-1 btn bg-gradient-danger" onclick="deleteLandfillWasteTypeConfirmed()" data-dismiss="modal" aria-label="Delete">
                        <span aria-hidden="true"> @DbResHtml.T("Delete", "Resources")</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="editLegalLandfillWasteTypeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-gradient-warning text-white">
                    <h5 class="modal-title">@DbResHtml.T("Edit Legal Landfill Waste Type", "Resources")</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="editLegalLandfillWasteTypeModalBody" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="mb-1 btn bg-gradient-warning text-white" onclick="editLegalLandfillWasteTypeConfirmed()" data-dismiss="modal" aria-label="Edit">
                        <span aria-hidden="true"> @DbResHtml.T("Edit", "Resources")</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="addLegalLandfillWasteTypeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-gradient-primary">
                    <h4 class="modal-title">@DbResHtml.T("New Legal Landfill Waste Type", "Resources")</h4>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="addLegalLandfillWasteTypeModalBody" class="modal-body">
                    <div class="form-group">
                        <label class="form-control-label" for="#addLegalLandfillWasteTypeNameInput">@DbResHtml.T("Name:", "Resources")</label>
                        <input type="text" name="Name" class="form-control" id="addLegalLandfillWasteTypeNameInput" required />
                    </div>
                    <div class="form-group">
                        <label class="form-control-label mt-3" for="#addLegalLandfillWasteTypeDescriptionInput">@DbResHtml.T("Description:", "Resources")</label>
                        <input type="text" name="Description" class="form-control" id="addLegalLandfillWasteTypeDescriptionInput" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="mb-1 btn bg-gradient-primary" onclick="addLegalLandfillWasteTypeConfirmed()" data-dismiss="modal" aria-label="Add">
                        <span aria-hidden="true"> @DbResHtml.T("Add", "Resources")</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

} 