            }

            $.ajax({
                type: "POST",
                url: "@Url.Action("CreateLegalLandfillWasteTypeConfirmed", "LegalLandfillsWasteManagement", new { Area = "IntranetPortal" })",
                data: {
                    legalLandfillWasteTypeViewModel: legalLandfillWasteTypeViewModel
                },
                success: function (data) {
                    if (data != undefined || data != null) {
                        if (data.isSuccess == false && data.errMsg != null) {
                            Swal.fire({
