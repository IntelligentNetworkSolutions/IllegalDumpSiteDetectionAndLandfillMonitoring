                }
            });
        }
        function addLegalLandfillWasteTypeConfirmed() {
            const name = $("#addLegalLandfillWasteTypeNameInput").val();
            const description = $("#addLegalLandfillWasteTypeDescriptionInput").val();

            if (name == '') {
                Swal.fire({
                    icon: "warning",
                    text: "@DbResHtml.T("Name is required properties", "Resources")"
                });
                return;
            }

            var legalLandfillWasteTypeViewModel = {
                Name: name,
