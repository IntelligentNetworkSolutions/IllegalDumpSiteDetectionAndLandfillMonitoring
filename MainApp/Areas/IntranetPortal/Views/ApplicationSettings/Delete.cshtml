@using MainApp.Helpers;
@using SD.Enums;
@using SD.Helpers;
@model Models.ViewModels.ApplicationSettingsDeleteViewModel


@{
    ViewData["Title"] = @DbResHtml.T("Delete Application Setting", "Resources");
}
<div class="content-header bg-gradient-white border-bottom mb-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h4 class="text-muted mb-0"> @ViewData["Title"]</h4>
                <small>@DbResHtml.T("Confirm application setting deleting", "Resources")</small>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#" class="text-success">@DbResHtml.T("Home", "Resources")</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h3 class="card-title">@DbResHtml.T("Form for deleting application settings", "Resources") </h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @DbResHtml.T("Setting Key", "Resources")
                            </dt>
                            <dd class="col-sm-10">
                                @Model.Key
                            </dd>
                            <dt class="col-sm-2">
                                @DbResHtml.T("Setting Value", "Resources")
                            </dt>
                            <dd class="col-sm-10">
                                @Model.Value
                            </dd>
                            <dt class="col-sm-2">
                                @DbResHtml.T("Setting Description", "Resources")
                            </dt>
                            <dd class="col-sm-10">
                                @Model.Description
                            </dd>
                            <dt class="col-sm-2">
                                @DbResHtml.T("Setting data type", "Resources")
                            </dt>
                            <dd class="col-sm-10">
                                @Model.DataType
                            </dd>
                            <dt class="col-sm-2">
                                @DbResHtml.T("Setting Module", "Resources")
                            </dt>
                            <dd class="col-sm-10">
                                @Model.InsertedModule
                            </dd>
                        </dl>
                    </div>
                </div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Key" />
                    <input type="submit" value="@DbResHtml.T("Delete", "Resources")" class="mb-1 btn bg-gradient-danger" />
                    <a asp-area="IntranetPortal" asp-controller="ApplicationSettings" asp-action="Index" class="mb-1 btn bg-gradient-secondary border-0">@DbResHtml.T("Back To List", "Resources")</a>


                </form>
            </div>
        </div>
    </div>
</div>
